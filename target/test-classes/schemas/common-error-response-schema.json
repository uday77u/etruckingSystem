{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "status",
    "message",
    "code",
    "error",
    "description"
  ],
  "properties": {
    "status": {
      "type": "boolean",
      "enum": [false]
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "code": {
      "type": "integer",
      "minimum": 400,
      "maximum": 599
    },
    "error": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": true
}
