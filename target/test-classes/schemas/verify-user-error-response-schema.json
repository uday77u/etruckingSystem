{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["status", "message", "code", "error", "description"],
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "boolean",
      "enum": [false]
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "code": {
      "type": "integer",
      "enum": [400]
    },
    "error": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    }
  }
}